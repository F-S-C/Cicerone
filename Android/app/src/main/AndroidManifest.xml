<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fsc.cicerone">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.ForgotPassword"
            android:label="@string/reset_password"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".view.GlobetrotterItineraryListFragment"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".view.CiceroneItineraryListFragment"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".view.admin_view.AdminDetailsUserFragment"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".view.ReservationFragment"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".view.admin_view.AdminUserProfile"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".view.UsersListFragment"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".view.RegistrationActivity"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".view.admin_view.AdminItineraryDetails"
            android:screenOrientation="nosensor"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.admin_view.AdminReportDetailsActivity"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".view.admin_view.AdminMainActivity"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".view.ChangePasswordActivity"
            android:label="@string/change_password"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".view.WishlistFragment"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".view.ItineraryUpdate"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".view.UserMainActivity"
            android:label="@string/app_name"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".view.ReportDetailsActivity"
            android:label="@string/report_details_title"
            android:screenOrientation="nosensor">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.ItineraryManagement"
            android:screenOrientation="nosensor"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.ItineraryDetails"
            android:screenOrientation="nosensor"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.ItineraryCreation"
            android:label="@string/create_itinerary"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".view.ProfileActivity"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".view.LoginActivity"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".view.SplashActivity"
            android:screenOrientation="nosensor"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
        </activity>

        <!-- Firebase Notifications -->
        <service
            android:name=".notifications.MyFirebaseMessagingService"
            android:stopWithTask="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>